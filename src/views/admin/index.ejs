<!DOCTYPE html>
<html>
<%- include('../components/head', {title: "Users"}) %>
<body>
	<div class="wrapper">
		<%- include('../components/header') %>
		<%- include('../components/side_bar') %>
			
			<div class="main-panel">
				<div class="content">
					<div class="container-fluid">
						<h4 class="page-title">Administrateur</h4>
                        <div class="card">
                            <div class="card-header d-flex justify-content-between">
                                <div class="card-title">Listes des utilisateurs</div>
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                                    Ajouter
                                  </button> 
                            </div>
                            <div class="card-body">
                            <!--     <div class="card-sub">
                                    Create responsive tables by wrapping any table with <code class="highlighter-rouge">.table-responsive</code> <code class="highlighter-rouge">DIV</code> to make them scroll horizontally on small devices
                                </div> -->
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Nom</th>
                                                <th>Email</th>
                                                <th>Photo</th>
                                                <th>Rôle</th>
                                                <th>Status</th>

                                            </tr>
                                        </thead>
                                        <tbody id="float">
                                            <% users.forEach((item, i) => { 
                                                const nom = item.prenom + " " + item.nom
                                               
                                                %>
                                                <tr>
                                                    <td><%= i + 1 %></td>
                                                    <td><%= nom %></td>
                                                    <td><%= item.email %></td>
                                                    <td><img src="<%= item.photo %>" alt="" width="75" height="auto"></td>
                                                    <td><%= item.role %></td>
                                                    <td>
                                                        <% if (item.status != false ) { %>
                                                        <button class="btn btn-success" onclick="status(<%= item.id %>)">Activé</button>
                                                        <% }else{ %>
                                                            <button class="btn btn-danger" onclick="status(<%= item.id %>)">Désactivé</button>
                                                        <% } %> 
                                                    </td>
                                                   </tr>
                                              <% }); %>
                                           
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
					</div>
				</div>
				<%- include('../components/footer') %>
			</div>
		</div>
	</div>

	<%- include('../components/modal') %>
</body>
<%- include('../components/scripts') %>

   <script src="assets/js/scripts/user.js"></script>
</html>