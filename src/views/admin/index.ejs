<!DOCTYPE html>
<html>
<%- include('../components/head', {title: "Users"}) %>
<body>
	<div class="wrapper">
		<%- include('../components/header') %>
		<%- include('../components/side_bar') %>
			
			<div class="main-panel">
				<div class="content">
					<div class="container-fluid">
						<h4 class="page-title">Administrateur</h4>
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">Listes des utilisateurs</div>
                            </div>
                            <div class="card-body">
                            <!--     <div class="card-sub">
                                    Create responsive tables by wrapping any table with <code class="highlighter-rouge">.table-responsive</code> <code class="highlighter-rouge">DIV</code> to make them scroll horizontally on small devices
                                </div> -->
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Nom</th>
                                                <th>Email</th>
                                                <th>Photo</th>
                                                <th>Status</th>

                                            </tr>
                                        </thead>
                                        <tbody id="float">
                                            <% users.forEach((item, i) => { 
                                                const nom = item.prenom + " " + item.nom
                                               
                                                %>
                                                <tr>
                                                    <td><%= i + 1 %></td>
                                                    <td><%= nom %></td>
                                                    <td><%= item.email %></td>
                                                    <td class="text-primary"><img src="assets/img/profile.jpg" alt="" width="auto" height="auto"></td>
                                                    <td>
                                                        <% if (item.status != false ) { %>
                                                        <button class="btn btn-success" onclick="status(<%= item.id %>)">Activé</button>
                                                        <% }else{ %>
                                                            <button class="btn btn-danger" onclick="status(<%= item.id %>)">Désactivé</button>
                                                        <% } %> 
                                                    </td>
                                                   </tr>
                                              <% }); %>
                                           
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
					</div>
				</div>
				<%- include('../components/footer') %>
			</div>
		</div>
	</div>
	<!-- Modal -->
	<%- include('../components/modal') %>
</body>
<%- include('../components/scripts') %>
<script>

    function status(id){
        const url = "/api/status/"+id;
        const data = {
            status:true
        }
        console.log(data)
        const options = {
            method:'PUT',
            headers:{
                'Content-Type':'applications/json'
            },
            body:JSON.stringify(data)
        }
    fetch(url, options)
	.then(res => res.json())
	.then(data => {
    location.reload(true)
    })
    }
   </script>
</html>